# 크롤러 설정 환경 변수 예시
# 이 파일을 .env로 복사하여 사용하세요

# 기본 URL 설정
CRAWLER_BASE_URL=https://www.g2b.go.kr

# 크롤링 범위 설정
CRAWLER_MAX_PAGES=10
CRAWLER_MAX_ITEMS=100

# 검색 키워드 (선택)
CRAWLER_KEYWORD=

# 브라우저 설정
CRAWLER_HEADLESS=true
CRAWLER_TIMEOUT=30000

# 로깅 설정
CRAWLER_LOG_LEVEL=INFO

# 저장소 설정
CRAWLER_DATA_DIR=data
CRAWLER_OUTPUT_FORMAT=json

# 스케줄러 설정
CRAWLER_SCHEDULER_ENABLED=false
CRAWLER_SCHEDULER_MODE=interval
CRAWLER_SCHEDULER_INTERVAL=60
CRAWLER_SCHEDULER_CRON=0 */6 * * *
